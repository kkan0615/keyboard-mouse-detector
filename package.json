{
  "name": "react-ts-vite-electron-bolilerplate",
  "author": "Youngin Kwak",
  "version": "0.0.6",
  "private": true,
  "main": "./dist/main/main.cjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node scripts/devServer.ts",
    "dev:renderer": "vite packages/renderer",
    "postinstall": "electron-builder install-app-deps",
    "build": "ts-node scripts/build.ts && electron-builder",
    "release": "ts-node scripts/build.ts && electron-builder --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkan0615/keyboard-mouse-detector"
  },
  "build": {
    "appId": "com.my-website.keyboard-mouse-detector",
    "productName": "Keyboard mouse detector",
    "copyright": "Copyright Â© 2022 ${author}",
    "publish": [
      {
        "provider": "github",
        "private": true,
        "owner": "kkan0615",
        "repo": "keyboard-mouse-detector"
      }
    ],
    "mac": {
      "icon": "./public/logo/logo_color-128.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./public/logo/logo_color-256.png",
      "publish": [
        "github"
      ],
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      "public"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "@iconify/react": "^4.0.0",
    "dayjs": "^1.11.6",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "i18next": "^22.0.4",
    "node-gyp-build": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^12.0.0",
    "react-router": "^6.4.2",
    "react-router-dom": "^6.4.2",
    "sass": "^1.56.0",
    "uiohook-napi": "^1.5.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-helmet": "^6.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^2.0.0",
    "autoprefixer": "^10.4.12",
    "cross-env": "^7.0.3",
    "electron": "^19.0.4",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "8.22.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.30.1",
    "postcss": "^8.4.18",
    "tailwindcss": "^3.2.1",
    "ts-node": "^10.8.2",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  }
}
